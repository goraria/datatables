@model IEnumerable<datatables.Models.ObjectPosition>

@{
    ViewBag.Title = "Index";
}

<h2>Position</h2>

<div class="card">
    <div class="card-datatable table-responsive">
        <div id="position-table" class="dataTables_wrapper dt-bootstrap5 no-footer">
            <div class="card-header flex-column flex-md-row pb-0">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="head-label text-center">
                        <h5 class="card-title mb-0">Position DataTable</h5>
                    </div>
                    <div class="dt-action-buttons text-end pt-6 pt-md-0">
                        <div class="dt-buttons btn-group flex-wrap">
                            <div class="btn-group">
                                <div class="dropdown me-3">
                                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Export
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li id="exportExcelBtn">
                                            <a class="dropdown-item" href="#">Export as XLSX</a>
                                        </li>
                                        <li id="exportWordBtn">
                                            <a class="dropdown-item" href="#">Export as DOCX</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div>
                                <button id="addBtn" class="btn btn-primary">
                                    <i class="fa-solid fa-plus me-2"></i> Add New Record
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="positionTable" class="table table-striped table-bordered table-hover display">
                    <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="positionModal" tabindex="-1" aria-labelledby="positionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="positionModalLabel">Add/Edit Position</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="positionId" />
                <div class="mb-3">
                    <label for="positionName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="positionName" placeholder="Enter name" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Processors/Position/Position.js"></script>
}

